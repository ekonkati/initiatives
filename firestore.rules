
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check if a user document exists and if their role is 'Admin'.
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }

    function isInitiativeMember(initiativeId) {
      let initiativeDoc = get(/databases/$(database)/documents/initiatives/$(initiativeId)).data;
      return isUserAuthenticated() && (request.auth.uid in initiativeDoc.leadIds || request.auth.uid in initiativeDoc.teamMemberIds || isAdmin());
    }

    // --- Rules ---

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS
    match /users/{userId} {
      // Admins can read any profile. Any authenticated user can read any profile (for avatars/names).
      allow read: if isUserAuthenticated() || isAdmin();
      // Users can update their own profile, or an admin can.
      allow write: if isOwner(userId) || isAdmin();
    }

    // DEPARTMENTS & DESIGNATIONS
    match /departments/{docId} {
      // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
      // Only admins can write master data.
      allow write: if isAdmin();
    }
    match /designations/{docId} {
        // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
       // Only admins can write master data.
      allow write: if isAdmin();
    }

    // INITIATIVES & SUBCOLLECTIONS
    match /initiatives/{initiativeId} {
      // Any authenticated user can list initiatives. Members/Admins can read a single one.
      allow list: if isUserAuthenticated();
      allow get: if isInitiativeMember(initiativeId) || isAdmin();
      // Only members or admins can write.
      allow write: if isInitiativeMember(initiativeId);

      // TASKS
      match /tasks/{taskId} {
        allow read, write: if isInitiativeMember(initiativeId);
      }
      
      // ATTACHMENTS
      match /attachments/{attachmentId} {
         allow read, write: if isInitiativeMember(initiativeId);
      }
      
      // Other subcollections inherit the same simple rule.
      match /initiativeRatings/{ratingId} {
          allow read, write: if isInitiativeMember(initiativeId);
      }
      match /userRatings/{ratingId} {
          allow read, write: if isInitiativeMember(initiativeId);
      }
      match /dailyCheckins/{checkinId} {
          allow read, write: if isInitiativeMember(initiativeId);
      }
    }
  }
}
