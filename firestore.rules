
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check if the user document exists and the role is 'Admin'.
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }

    function isInitiativeMember(initiativeId) {
      let initiativeDoc = get(/databases/$(database)/documents/initiatives/$(initiativeId));
      let isLead = request.auth.uid in initiativeDoc.data.leadIds;
      let isTeamMember = request.auth.uid in initiativeDoc.data.teamMemberIds;
      
      return isUserAuthenticated() && (isAdmin() || isLead || isTeamMember);
    }
    
    // --- Rules ---

    // USERS
    match /users/{userId} {
      // Any authenticated user can read any profile (for avatars/names).
      allow read: if isUserAuthenticated();
      // Users can update their own profile, or an admin can.
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // INITIATIVES
    // A user can read an initiative doc if they are a member.
    // This single 'read' rule covers both 'get' and 'list' operations.
    // For 'list' to succeed, the client query MUST be constrained to only request
    // documents that the user is a member of (which useInitiatives hook now does).
    match /initiatives/{initiativeId} {
        allow read, write: if isInitiativeMember(initiativeId);
    }
    
    // DEPARTMENTS & DESIGNATIONS (Master Data)
    match /departments/{docId} {
      // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
      // Only admins can write master data.
      allow write: if isAdmin();
    }
    match /designations/{docId} {
        // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
       // Only admins can write master data.
      allow write: if isAdmin();
    }

    // INITIATIVE SUBCOLLECTIONS
    // This rule allows members of an initiative to access all related sub-collection documents.
    match /initiatives/{initiativeId}/{allChildren=**} {
      allow read, write: if isInitiativeMember(initiativeId);
    }
  }
}
