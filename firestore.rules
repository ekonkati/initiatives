
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check if the user document exists in the 'users' collection and the role is 'Admin'.
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }

    // This is the new, more efficient check.
    function isInitiativeMember(initiativeId) {
      // Securely checks the denormalized list on the user's own profile.
      return isUserAuthenticated() && initiativeId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.initiativeMemberships;
    }
    
    // --- Rules ---

    // USERS
    match /users/{userId} {
      // Any authenticated user can read any other user's profile for collaboration purposes.
      // A user can always update their own profile. An admin can update any profile.
      allow read: if isUserAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // INITIATIVES
    match /initiatives/{initiativeId} {
      // Admins can do anything.
      // Other users can read an initiative IF its ID is in their membership list.
      // This rule now correctly supports both `get` and `list` (with an `in` query).
      allow read: if isAdmin() || isInitiativeMember(initiativeId);
      
      // Write access is granted to members by checking the initiative document's own lists.
      // This is okay because you can't write to a document you can't read first.
      allow write: if isAdmin() || (request.auth.uid in resource.data.leadIds || request.auth.uid in resource.data.teamMemberIds);
    }
    
    // DEPARTMENTS & DESIGNATIONS (Master Data)
    match /departments/{docId} {
      // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
      // Only admins can write master data.
      allow write: if isAdmin();
    }
    match /designations/{docId} {
        // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
       // Only admins can write master data.
      allow write: if isAdmin();
    }

    // INITIATIVE SUBCOLLECTIONS
    // Access to subcollections (tasks, documents, etc.) is granted if the user is a member of the parent initiative.
    match /initiatives/{initiativeId}/{allChildren=**} {
      allow read, write: if isAdmin() || isInitiativeMember(initiativeId);
    }
  }
}
