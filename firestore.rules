
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin by reading their role from their profile.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Helper function to check if a user is a member of an initiative from the initiative's data.
    // This is used for rules on an initiative document itself.
    function isInitiativeMember(initiativeData) {
      return request.auth.uid in initiativeData.leadIds || 
             request.auth.uid in initiativeData.teamMemberIds || 
             isAdmin();
    }
    
    // Helper function to check initiative membership by fetching the initiative document.
    // This is used for rules on subcollections where the initiative data isn't directly available.
    function isMemberOfInitiative(initiativeId) {
        let initiativeDoc = get(/databases/$(database)/documents/initiatives/$(initiativeId));
        return request.auth.uid in initiativeDoc.data.leadIds ||
               request.auth.uid in initiativeDoc.data.teamMemberIds ||
               isAdmin();
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read the list of users for display purposes.
    // Restrict updates to the user themselves or an admin.
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      allow update, create: if request.auth.uid == userId || isAdmin();
    }

    // Allow authenticated users to read/write master data
    match /departments/{departmentId} {
      allow read, write: if request.auth.uid != null;
    }
     match /designations/{designationId} {
      allow read, write: if request.auth.uid != null;
    }

    // Rules for initiatives and their subcollections
    match /initiatives/{initiativeId} {
      // Allow authenticated users to list initiatives for the main page.
      allow list: if request.auth.uid != null;
      
      // Allow read/write only if the user is a member of the initiative.
      allow read, write: if isInitiativeMember(resource.data);

      // Tasks subcollection
      match /tasks/{taskId} {
        allow read, write, list: if isMemberOfInitiative(initiativeId);
      }
      
      // Attachments subcollection
      match /attachments/{attachmentId} {
        allow read, write, list: if isMemberOfInitiative(initiativeId);
      }
    }
  }
}
