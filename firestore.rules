
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get a user's role from their profile
    function getUserRole(userId) {
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      return userDoc.data.role;
    }

    // Helper function to check if a user is an admin
    function isAdmin() {
      return getUserRole(request.auth.uid) == 'Admin';
    }

    // Helper function to check if a user is a member of an initiative from a resource
    function isInitiativeMember(initiativeData) {
      return request.auth.uid in initiativeData.leadIds || 
             request.auth.uid in initiativeData.teamMemberIds || 
             isAdmin();
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read the list of users for display purposes.
    // Restrict updates to the user themselves or an admin.
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      allow update, create: if request.auth.uid == userId || isAdmin();
    }

    // Allow authenticated users to read/write master data
    match /departments/{departmentId} {
      allow read, write: if request.auth.uid != null;
    }
     match /designations/{designationId} {
      allow read, write: if request.auth.uid != null;
    }

    // Rules for initiatives and their subcollections
    match /initiatives/{initiativeId} {
      // Allow authenticated users to list initiatives for the main page.
      // Detailed read/write is checked below.
      allow list: if request.auth.uid != null;
      
      // Allow read/write only if the user is a member of the initiative.
      // This rule now correctly uses the 'resource.data' available on read/write operations.
      allow read, write: if isInitiativeMember(resource.data);

      // Tasks subcollection
      match /tasks/{taskId} {
        // Here we must use get() because the task document doesn't contain initiative membership.
        allow read, write, list: if isInitiativeMember(get(/databases/$(database)/documents/initiatives/$(initiativeId)).data);
      }
      
      // Attachments subcollection
      match /attachments/{attachmentId} {
         // Here we must use get() because the attachment document doesn't contain initiative membership.
        allow read, write, list: if isInitiativeMember(get(/databases/$(database)/documents/initiatives/$(initiativeId)).data);
      }
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow members of an initiative to read/write to that initiative's attachment folder
    function isInitiativeMember(initiativeId) {
      let initiative = get(/databases/$(database)/documents/initiatives/$(initiativeId)).data;
      return request.auth.uid in initiative.leadIds || request.auth.uid in initiative.teamMemberIds || isAdmin();
    }
    
    match /initiatives/{initiativeId}/attachments/{allPaths=**} {
       allow read, write: if isInitiativeMember(initiativeId);
    }
  }
}
