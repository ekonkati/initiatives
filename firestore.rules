
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check if the user document exists and the role is 'Admin'.
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }

    function isInitiativeMember(initiativeId) {
      // This function verifies if the requesting user is a lead or a team member of a specific initiative.
      // It's used to secure access to individual initiative documents and their subcollections.
      let initiativeDoc = get(/databases/$(database)/documents/initiatives/$(initiativeId));
      let isLead = request.auth.uid in initiativeDoc.data.leadIds;
      let isTeamMember = request.auth.uid in initiativeDoc.data.teamMemberIds;
      
      return isUserAuthenticated() && (isLead || isTeamMember);
    }
    
    // --- Rules ---

    // USERS
    match /users/{userId} {
      // Any authenticated user can read any other user's profile for collaboration purposes.
      // A user can always update their own profile. An admin can update any profile.
      allow read: if isUserAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // INITIATIVES
    match /initiatives/{initiativeId} {
      // A user can read an initiative if they are an Admin or a member.
      // A user can write to an initiative if they are an Admin or a member.
      // This single `read` rule covers both `get` and `list` operations,
      // as long as client-side `list` queries are correctly constrained.
      allow read, write: if isAdmin() || isInitiativeMember(initiativeId);
    }
    
    // DEPARTMENTS & DESIGNATIONS (Master Data)
    match /departments/{docId} {
      // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
      // Only admins can write master data.
      allow write: if isAdmin();
    }
    match /designations/{docId} {
        // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
       // Only admins can write master data.
      allow write: if isAdmin();
    }

    // INITIATIVE SUBCOLLECTIONS
    // This single rule secures all documents within any subcollection of an initiative.
    // Access is granted if the user is an Admin or a member of the parent initiative.
    // This avoids duplicating rules for tasks, attachments, ratings, etc.
    match /initiatives/{initiativeId}/{allChildren=**} {
      allow read, write: if isAdmin() || isInitiativeMember(initiativeId);
    }
  }
}
