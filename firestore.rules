
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      // Check the 'role' field on the user's own profile document.
      return getUserRole() == 'Admin';
    }

    function isInitiativeMember(initiativeId) {
      let initiativeDoc = get(/databases/$(database)/documents/initiatives/$(initiativeId));
      let leads = initiativeDoc.data.leadIds;
      let members = initiativeDoc.data.teamMemberIds;
      // Correctly check for UID existence in the lists.
      return request.auth.uid in leads || request.auth.uid in members || isAdmin();
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read the list of users for display purposes.
    // Restrict updates to the user themselves or an admin.
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      allow update, create: if request.auth.uid == userId || isAdmin();
    }

    // Allow authenticated users to read/write master data
    match /departments/{departmentId} {
      allow read, write: if request.auth.uid != null;
    }
     match /designations/{designationId} {
      allow read, write: if request.auth.uid != null;
    }

    // Rules for initiatives and their subcollections
    match /initiatives/{initiativeId} {
      // Allow any authenticated user to list initiatives for the main page.
      allow list: if request.auth.uid != null;
      
      // Allow read/write only if the user is a member of the initiative.
      allow read, write: if isInitiativeMember(initiativeId);

      // Tasks subcollection
      match /tasks/{taskId} {
        allow read, write, create, delete: if isInitiativeMember(initiativeId);
      }
      
      // Attachments subcollection
      match /attachments/{attachmentId} {
        allow read, write, list, create, delete: if isInitiativeMember(initiativeId);
      }
    }
     // Rule for the 'tasks' collection group query.
    // This allows a user to query for all tasks assigned to them across all initiatives.
    match /{path=**}/tasks/{taskId} {
      // Allow reading tasks if the query is filtering for the user's own tasks.
      allow read: if request.auth.uid == resource.data.ownerId;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {

    function getUserRole() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
       return getUserRole() == 'Admin';
    }

    function isInitiativeMember(initiativeId) {
      let initiative = get(/databases/(default)/documents/initiatives/$(initiativeId)).data;
      return request.auth.uid in initiative.leadIds || request.auth.uid in initiative.teamMemberIds || isAdmin();
    }

    // Allow reads if the user is an initiative member.
    // Allow writes (uploads/deletes) only by initiative members.
    // The path is structured as /initiatives/{initiativeId}/{fileName}
    match /initiatives/{initiativeId}/{allPaths=**} {
      allow read: if isInitiativeMember(initiativeId);
      allow write: if isInitiativeMember(initiativeId);
    }
  }
}
