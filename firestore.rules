
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check if a user document exists and if their role is 'Admin'.
      // Note: This relies on the user's profile document being present.
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return isUserAuthenticated() && userDoc.data.role == 'Admin';
    }

    function isOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }

    function isInitiativeMember(initiativeId) {
      let initiativeDoc = get(/databases/$(database)/documents/initiatives/$(initiativeId));
      // Check if the user is an admin OR if their UID is in the leadIds or teamMemberIds lists.
      return isUserAuthenticated() && 
             (isAdmin() || 
              (initiativeDoc.data.leadIds != null && request.auth.uid in initiativeDoc.data.leadIds) ||
              (initiativeDoc.data.teamMemberIds != null && request.auth.uid in initiativeDoc.data.teamMemberIds));
    }

    // --- Rules ---

    // USERS
    match /users/{userId} {
      // Any authenticated user can read any profile (for avatars/names).
      allow read: if isUserAuthenticated();
      // Users can update their own profile, or an admin can.
      allow write: if isOwner(userId) || isAdmin();
    }

    // DEPARTMENTS & DESIGNATIONS
    match /departments/{docId} {
      // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
      // Only admins can write master data.
      allow write: if isAdmin();
    }
    match /designations/{docId} {
        // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
       // Only admins can write master data.
      allow write: if isAdmin();
    }

    // INITIATIVES & SUBCOLLECTIONS
    match /initiatives/{initiativeId} {
      // Any authenticated user can list initiatives to see the main list.
      allow list: if isUserAuthenticated();
      // Only members or admins can read a single full initiative document.
      allow get: if isInitiativeMember(initiativeId);
      // Only members or admins can write to the initiative document.
      allow write: if isInitiativeMember(initiativeId);

      // TASKS, ATTACHMENTS, and other subcollections
      // Inherit the parent initiative's membership check for all operations.
      match /{allChildren=**} {
        allow read, write: if isInitiativeMember(initiativeId);
      }
    }
  }
}
