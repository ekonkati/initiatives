
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check if the user document exists and the role is 'Admin'.
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isOwner(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }

    function isInitiativeMember(initiativeId) {
      // This function now securely checks the denormalized list on the user's own profile.
      let userProfile = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return initiativeId in userProfile.initiativeMemberships;
    }
    
    // --- Rules ---

    // USERS
    match /users/{userId} {
      // Any authenticated user can read any other user's profile for collaboration purposes.
      // A user can always update their own profile. An admin can update any profile.
      allow read: if isUserAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // INITIATIVES
    match /initiatives/{initiativeId} {
      // An admin can read any initiative.
      // A user can read an initiative if its ID is in their 'initiativeMemberships' list.
      // This rule works for both `get` and `list` (with `in` query).
      allow read: if isAdmin() || (initiativeId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.initiativeMemberships);
      
      // Write access is granted to members (leads/team) or admins.
      // We check the initiative document's own lists for write permissions.
      allow write: if isAdmin() || (request.auth.uid in resource.data.leadIds || request.auth.uid in resource.data.teamMemberIds);
    }
    
    // DEPARTMENTS & DESIGNATIONS (Master Data)
    match /departments/{docId} {
      // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
      // Only admins can write master data.
      allow write: if isAdmin();
    }
    match /designations/{docId} {
        // Any authenticated user can read master data.
      allow read: if isUserAuthenticated();
       // Only admins can write master data.
      allow write: if isAdmin();
    }

    // INITIATIVE SUBCOLLECTIONS
    // Access to subcollections (tasks, documents, etc.) is granted if the user is a member of the parent initiative.
    // This check now uses the initiative's own member lists, which is appropriate for writes within the subcollection.
    match /initiatives/{initiativeId}/{allChildren=**} {
      allow read, write: if isAdmin() || (request.auth.uid in get(/databases/$(database)/documents/initiatives/$(initiativeId)).data.leadIds || request.auth.uid in get(/databases/$(database)/documents/initiatives/$(initiativeId)).data.teamMemberIds);
    }
  }
}
